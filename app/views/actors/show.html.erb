<section id='name'><h1><%= @actor.name %></h1></section>
<section id='age'><p>Age: <%= @actor.age %></p></section>
<section id='movies'>
  <p></p>
  <h3><%= "Movies #{@actor.name} was in:" %></h3>
  <% @actor.movies.each do |movie| %>
    <p><%= movie.name %></p>
  <% end %>
</section>
<section id='worked_with'>
  <p><%= @actor.name %> has worked with </p>
  <% @actor.worked_with.each do |actor| %>
    <% if actor != @actor.worked_with.last %>
      <%= "#{actor.name}," %>
    <% else %>
      <%= "and #{actor.name}" %>
    <% end %>
  <% end %>
</section>
