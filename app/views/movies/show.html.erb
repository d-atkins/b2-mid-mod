<section id='movie_name'><h1><%= @movie.name %></h1></section>
<section id='creation_year'><p>Creation year: <%= @movie.creation_year %></p></section>
<section id='genre'><p>Genre: <%= @movie.genre %></p></section>
<section id='actors'>
  <p>Starring
  <% @movie.actors_by_age.each do |actor| %>
    <% if actor != @movie.actors_by_age.last %>
      <%= "#{actor.name}," %>
    <% else %>
      <%= "and #{actor.name}" %>
    <% end %>
  <% end %>
  </p>
</section>
<section id='average_age'>Average age of all actors: <%= @movie.average_age_of_actors.round(2) %></section>
<section id='new_actor_form'>
  <h3>Add an actor to this movie</h3>
  <%= form_tag("/movie_actors/#{@movie.id}") do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= submit_tag "Add Actor" %>
  <% end %>
</section>
